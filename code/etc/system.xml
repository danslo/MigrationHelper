<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <dev>
            <groups>
                <migration_helper module="migration_helper" translate="label">
                    <label>Migration Helper Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <migration_module translate="label comment">
                            <label>Migration Module</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Although this module can work standalone, it's recommended to store migrations in a separate module.</comment>
                        </migration_module>
                        <migration_resource translate="label comment">
                            <label>Migration Resource Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Name of the resource node used for migrations (config->global->resources).</comment>
                        </migration_resource>
                        <generate_migrations translate="label comment">
                            <label>Generate Migrations</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Whether migrations are actually generated.</comment>
                        </generate_migrations>
                    </fields>
                </migration_helper>
            </groups>
        </dev>
    </sections>
</config>
